<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_5M02Radio.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <HorizontalStackLayout >
                <VerticalStackLayout WidthRequest="250">
                    <RadioButton
                        Content="czerwony"
                        x:Name="rbRed"
                        />
                    <RadioButton 
                        Content="zielony"
                        x:Name="rbGreen"
                        />
                    <RadioButton
                        Content="niebieski"
                        x:Name="rbBlue"
                        />
                    <Button
                        Text="ustaw kolor"
                        Clicked="btnUstaw"
                        WidthRequest="150"
                        />
                </VerticalStackLayout>
                <Label
                    Text="napis próbny"
                    FontSize="40"
                    x:Name="lblNapis"
                    VerticalOptions="Center"
                    />

            </HorizontalStackLayout>

            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
